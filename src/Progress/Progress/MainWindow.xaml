<Window x:Class="Progress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Progress"
        mc:Ignorable="d"
        Title="Progress" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="222" Margin="10,10,0,0" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Visible" VerticalAlignment="Top" Width="772"/>
        <Button x:Name="btnStart" Content="Начать" HorizontalAlignment="Left" Margin="151,286,0,0" VerticalAlignment="Top" Width="182" Height="51" FontSize="24" Click="btnStart_Click"/>
        <Button x:Name="btnCancel" Content="Отменить" HorizontalAlignment="Left" Margin="442,286,0,0" VerticalAlignment="Top" Width="182" Height="51" FontSize="24" Click="btnCancel_Click" IsEnabled="False"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="14" Margin="10,237,0,0" VerticalAlignment="Top" Width="772"/>

    </Grid>
</Window>
